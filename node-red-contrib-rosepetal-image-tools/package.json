{
    "name": "node-red-contrib-rosepetal-image-tools",
    "version": "0.1.0",
    "description": "C++ powered image processing nodes for Node-RED.",
    "scripts": {
        "postinstall": "npm install --prefix ./node_modules/rosepetal-image-engine"
    },
    "keywords": [
        "node-red",
        "image",
        "image-processing",
        "opencv",
        "computer-vision"
    ],
    "author": {
        "name": "Rosepetal"
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/rosepetal-ai/node-red-contrib-rosepetal-image-tools.git"
    },
    "bugs": {
        "url": "https://github.com/rosepetal-ai/node-red-contrib-rosepetal-image-tools/issues"
    },
    "engines": {
        "node": ">=16.0"
    },
    "node-red": {
        "nodes": {
            "image-in": "nodes/io/image-in.js",
            "array-in": "nodes/io/array-in.js",
            "array-out": "nodes/io/array-out.js",
            "array-select": "nodes/io/array-select.js",
            "resize": "nodes/transform/resize.js",
            "rotate": "nodes/transform/rotate.js",
            "crop": "nodes/transform/crop.js",
            "concat": "nodes/mix/concat.js",
            "padding": "nodes/transform/padding.js",
            "filter": "nodes/transform/filter.js",
            "mosaic": "nodes/mix/mosaic.js"
        }
    },
    "dependencies": {
        "rosepetal-image-engine": "file:../rosepetal-image-engine",
        "sharp": "^0.34.2"
    }
}